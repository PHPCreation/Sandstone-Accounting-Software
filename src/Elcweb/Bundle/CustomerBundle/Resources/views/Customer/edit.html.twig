{% extends 'ElcwebThemeBundle::base.html.twig' %}

{% block title %}Customer edit{% endblock %}

{% block content %}
<form action="{{ path('customer_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit" class="btn btn-primary">Save</button>
    </p>
</form>

<a href="{{ path('customer') }}" class="btn">Back to the list</a>
<a href="{{ path('customer_delete', { 'id': entity.id }) }}" class="btn btn-danger">Delete</a>
{% endblock %}