{% extends 'ElcwebThemeBundle::base.html.twig' %}

{% block title %}Customer list{% endblock %}

{% block content %}
<table class="records_list">
    <thead>
        <tr>
            <th>Name</th>
            <th>Company</th>
            <th>Displayname</th>
            <th>Terms</th>
            <th>Created_at</th>
            <th>Modified_at</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('customer_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
            <td>{{ entity.company }}</td>
            <td>{{ entity.displayname }}</td>
            <td>{{ entity.terms }}</td>
            <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.modifiedat %}{{ entity.modifiedat|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <a href="{{ path('customer_show', { 'id': entity.id }) }}" class="btn">show</a>
                <a href="{{ path('customer_edit', { 'id': entity.id }) }}" class="btn">edit</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<a href="{{ path('customer_new') }}" class="btn">Create a new entry</a>
{% endblock %}